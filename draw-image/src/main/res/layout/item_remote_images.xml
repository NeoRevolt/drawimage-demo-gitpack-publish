        <!--            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_name"-->
        <!--            tools:text="Ini adalah deskripsi" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>